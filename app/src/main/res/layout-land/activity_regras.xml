<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    android:background="@color/green"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/regras"
            android:textSize="60sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo2_bold"
            />

        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/principio"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo2_bold"
            />

        <TextView
            android:background="@color/dark_green"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/colocar_pecas"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo2_bold"
            />


        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/p2"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo2_bold"
            />


            <ImageView
                android:id="@+id/iv_colocar_peca_1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/colocar_pecas_1"
                android:layout_margin="15dp"
                android:layout_gravity="center"></ImageView>



        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/p3"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo2_bold"
            />


        <ImageView
            android:id="@+id/iv_passar_vez"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/passar_vez"></ImageView>



        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/p4"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo2_bold"
            />


            <ImageView
                android:id="@+id/iv_colocar_peca_2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/colocar_pecas_2"
                android:layout_margin="15dp"
                android:layout_gravity="center"></ImageView>



        <TextView
            android:background="@color/dark_green"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jogadas_especiais"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo2_bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:layout_gravity="center">
        <ImageView
            android:id="@+id/iv_bomba_troca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bomba_troca_btn"
            android:layout_margin="5dp"
            android:layout_gravity="center"></ImageView>

        </LinearLayout>

        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pjogadas_especiais"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo2_bold"
            />

        <TextView
            android:background="@color/grey"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bomba"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo2_bold"
            />


        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pbomba"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo2_bold"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/iv_bomba1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/usar_bomba1"
                android:layout_margin="15dp"
                android:layout_gravity="center"></ImageView>
            <ImageView
                android:id="@+id/iv_bomba2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/usar_bomba2"
                android:layout_margin="5dp"
                android:layout_gravity="center"></ImageView>

        </LinearLayout>


        <TextView
            android:background="@color/grey"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/troca"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo2_bold"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/baloo2_bold"
            android:gravity="center"
            android:text="@string/ptroca"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/iv_troca1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/troca1"
                android:layout_margin="15dp"
                android:layout_gravity="center"></ImageView>
            <ImageView
                android:id="@+id/iv_troca2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/troca2"
                android:layout_margin="5dp"
                android:layout_gravity="center"></ImageView>

        </LinearLayout>




        <TextView
            android:background="@color/dark_green"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fim_partida"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo2_bold"
            />



        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pfim"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo2_bold"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bola_preta"
            android:layout_gravity="center">

        </ImageView>












        <TextView
            android:background="@color/dark_green"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dica"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo2_bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/blue">
            <ImageView
                android:id="@+id/iv_hint"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/dica_btn"
                android:layout_margin="5dp"
                android:layout_gravity="center"></ImageView>


        </LinearLayout>

        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pdicas"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo2_bold"
            />


        <ImageView
            android:id="@+id/iv_dica1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/dica1"
            android:layout_margin="5dp"
            android:layout_gravity="center"></ImageView>







    </LinearLayout>




</ScrollView>
